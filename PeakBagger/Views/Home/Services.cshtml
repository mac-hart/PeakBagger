@{
    ViewData["Title"] = "Services";
}
<h1>@ViewData["Title"]</h1>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="site.js"></script>
</head>
<section id="contact" class="contact">
    <h2>Contact Me</h2>
    <p>
        Ready to schedule a consultation? 
        <br><br>Calculate potential costs below:
    </p>

    <form>
        <div>
            <label for="hours">Number of Hours:</label>
            <input type="number" id="hours" min="1">
        </div>
        <div>
            <label for="hourlyRate">Hourly Rate:</label>
            <input type="text" id="hourlyRate" value="$50" readonly>
        </div>
        <button id="calculate">Calculate Total</button>
        <div>
            <label for="total">Total:</label>
            <input type="text" id="total" readonly>
        </div>
    </form>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PeakBagger - a Mac Hartsell project - <a asp-area="" asp-controller="Home" asp-action="Services">Services</a>
        </div>
    </footer>
</section>
